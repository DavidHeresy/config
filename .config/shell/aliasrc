#!/bin/sh

# shell
alias e="exit"
alias c="clear && l"
alias o="xdg-open"
alias v="nvim"
alias t="touch"
alias md="mkdir"
alias cm="chmod"

# ls: Show hidden files by default.
alias ls="ls -a"

# cd: Navigate quickly.
alias d="cd"
alias ..="cd .."
alias ...="cd ../.."

# scripts
alias a="append"
alias u="source update"

# exa: Use as default list tool.
alias l="exa"
alias la="exa -a"
alias ll="exa -l"
alias lla="exa -la"

# tmux: Use UTF-8 in tmux.
alias tmux="tmux -u"

# git: Use lots of shortcuts.
alias g="git"
alias ga="git add"
alias gb="git build"
alias gc="git commit"
alias gi="git ignore"
alias gr="git report"
alias gs="git status"
alias gt="git todo"
alias gu="git update"
alias grm="git remove"
alias gmv="git rename"

# home: Manage $HOME files with a bare Git repository.
alias home="git --git-dir=$HOME/.home.git --work-tree=$HOME"
alias h="home"
alias ha="home add"
alias hb="home build"
alias hc="home commit"
alias hi="home ignore"
alias hr="home report"
alias hs="home status"
alias ht="home todo"
alias hu="home update"
alias hrm="home remove"
alias hmv="home rename"

