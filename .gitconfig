[alias]
	build = "! \"$SCRIPTS\"/build"
	ignore = "!f() { echo "${1}" >> $(git root)/.gitignore; }; f"
    readme = "! \"$SCRIPTS\"/readme"
	remove = "!f() { git rm ${1} && git commit -m \"rm '${1}'\"; }; f"
	rename = "!f() { git mv ${1} ${2} && git commit -m \"${1} -> ${2}\"; }; f"
    report = "! \"$SCRIPTS\"/report"
	root = "rev-parse --show-toplevel"
	update = "!f() { git add ${1} && git commit -m ${1}; }; f"

